      "source": [
        "<a href=\"https://colab.research.google.com/github/mohamedelzaim77/first/blob/main/the%20code%20firstipynb\" target=\"_parent\"><img src=\"https://colab.research.google.com/assets/colab-badge.svg\" alt=\"Open In Colab\"/></a>"
